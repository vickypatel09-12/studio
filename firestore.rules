rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // CUSTOMERS: Allow anyone to read the list of customers.
    // Authenticated users can create, update, and delete.
    match /customers/{customerId} {
      allow read, list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    // MONTHLY DEPOSITS & LOANS: Publicly readable, but only writable by authenticated users.
    match /monthlyDeposits/{monthId} {
      allow read, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /monthlyLoans/{monthId} {
       allow read, list: if true;
       allow create, update, delete: if isSignedIn();
    }

    // SESSION: Writable by authenticated users, readable by all.
    match /session/status {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
