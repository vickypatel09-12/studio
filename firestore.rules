rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // CUSTOMERS: Allow anyone to read the list of customers.
    // Authenticated users can create, update, and delete.
    match /customers/{customerId} {
      allow read, list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    // MONTHLY DEPOSITS & LOANS: Any authenticated user can read, list, and manage entries.
    match /monthlyDeposits/{monthId} {
      allow read, list, create, update, delete: if isSignedIn();
    }

    match /monthlyLoans/{monthId} {
       allow read, list, create, update, delete: if isSignedIn();
    }

    // SETTINGS: Publicly readable, but only writable from the server/admin console.
    match /settings/{settingId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
