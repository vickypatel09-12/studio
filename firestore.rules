rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // CUSTOMERS: Allow reads by authenticated users, and writes by authenticated users.
    match /customers/{customerId} {
      allow read, list: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // MONTHLY DEPOSITS & LOANS: Allow reads and writes only by authenticated users.
    match /monthlyDeposits/{monthId} {
      allow read, list: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /monthlyLoans/{monthId} {
       allow read, list: if isSignedIn();
       allow write: if isSignedIn();
    }

    // SESSION: Writable and readable by authenticated users.
    match /session/status {
      allow read, write: if isSignedIn();
    }
  }
}
