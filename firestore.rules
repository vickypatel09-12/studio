rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
 
    // WARNING: The following rules are insecure and are for development purposes only.
    // They allow anyone to read and write to the monthly deposits and loans collections.
    // You should implement proper authentication and security rules before deploying to production.
    match /monthlyDeposits/{monthId} {
      allow read, write: if true;
    }
 
    match /monthlyLoans/{monthId} {
      allow read, write: if true;
    }
  }
}
